@model UserProfileManager.Models.User

@{
  ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="container">
  <div class="row">
    <!-- Left Column (Details) -->
    <div class="col-md-8">
      <dl class="row">
        <dt class="col-sm-4">Unique Name</dt>
        <dd class="col-sm-8">@Model.UniqueName</dd>

        <dt class="col-sm-4">First Name</dt>
        <dd class="col-sm-8">@Model.FirstName</dd>

        <dt class="col-sm-4">Middle Name</dt>
        <dd class="col-sm-8">@Model.MiddleName</dd>

        <dt class="col-sm-4">Last Name</dt>
        <dd class="col-sm-8">@Model.LastName</dd>

        <dt class="col-sm-4">Phone Number</dt>
        <dd class="col-sm-8">@Model.CountryCode @Model.PhoneNumber</dd>

        <dt class="col-sm-4">Gender</dt>
        <dd class="col-sm-8">@Model.Gender</dd>

        <dt class="col-sm-4">Date of Birth</dt>
        <dd class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Address</dt>
        <dd class="col-sm-8">@Model.Address</dd>

        <dt class="col-sm-4">City</dt>
        <dd class="col-sm-8">@Model.City</dd>

        <dt class="col-sm-4">Education</dt>
        <dd class="col-sm-8">@Model.Education</dd>

      </dl>
    </div>

    <!-- Right Column (Photo) -->
    <div class="col-md-4 text-center">
      @if (Model.Photo != null && Model.Photo.Length > 0)
      {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" alt="User Photo" class="img-thumbnail" style="max-width: 150px;" />
      }
      else
      {
        <p>No Photo Available</p>
      }
    </div>
  </div>
</div>

<div class="mt-3">
  <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
  <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
